generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  user
}

model User {
  id          String    @id @default(uuid())
  firstName   String?
  lastName    String?
  birthDate   DateTime?
  city        String?
  country     String?
  avatar      String?
  company     String?
  jobPosition String?
  mobile      String?
  username    String    @unique
  email       String    @unique
  password    String
  role        Role      @default(user)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}
